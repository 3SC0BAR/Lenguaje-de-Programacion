     * WARNING: Do NOT modify this code. The content of this method is always
     * regenerated by the Form Editor.

@SuppressWarnings("unchecked")
// Generated Code
private void jbtnACEPTARActionPerformed(java.awt.event.ActionEvent evt) { 
    // TODO add your handling code here:

    try {
        String peso = jtfPESO.getText();
        String estatura = jtfESTATURA.getText();

        float p = Float.parseFloat(peso);
        float e = Float.parseFloat(estatura);

        float imc = p / (e*e);

        JOptionPane.showMessageDialog(null, "Su √çndice de Masa Corporal es de:" + imc);

        if (imc < 18.5) {
            JOptionPane.showMessageDialog(null, "Presentas Bajo Peso");
        } else if (imc >= 18.5 && imc <= 24.9) {
            JOptionPane.showMessageDialog(null, "Presentas Peso Normal");
        } else if (imc >= 25 && imc <= 29.9) {
            JOptionPane.showMessageDialog(null, "Presentas Sobre Peso");
        } else if (imc >= 30 && imc <= 34.9) {
            JOptionPane.showMessageDialog(null, "Presentas Obesidad I");
        } else if (imc >= 35 && imc <= 39.9) {
        } else {
        JOptionPane.showMessageDialog(null, "Presentas Obesidad III");
    }

} catch (Exception e) {
    JOptionPane.showMessageDialog(null, e);
}

jtfPESO.setText("");
jtfESTATURA.setText("");

}

